<Window x:Class="BolnicaSims.ListaPacijenata"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BolnicaSims"
        mc:Ignorable="d"
        Title="ListaPacijenata" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="dataGridPacijenti" ItemsSource="{Binding Pacijenti}" IsReadOnly="True"
                  SelectionMode="Single" AutoGenerateColumns="False" HorizontalAlignment="Left"
                  Height="211" Margin="166,98,0,0" VerticalAlignment="Top" Width="523">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Ime" Binding="{Binding korisnik.Ime}" Width="100" />
                <DataGridTextColumn Header="Prezime" Binding="{Binding korisnik.Prezime}" Width="100" />
                <DataGridTextColumn Header="Email" Binding="{Binding zdravstveniKarton.ImeRoditelja}" Width="*" />
                <DataGridTextColumn Header="br Kartona" Binding="{Binding zdravstveniKarton.BrojKartona}" Width="100" />

            </DataGrid.Columns>

        </DataGrid>
        <Button Content="Ukloni" Margin="10,98,686,274" Click="ButtonUkloni_Click" />
        <Button Content="Dodaj" Margin="10,247,686,125" Click="ButtonDodaj_Click"/>
    </Grid>
</Window>
