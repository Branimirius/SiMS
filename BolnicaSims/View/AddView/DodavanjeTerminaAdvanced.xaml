<Window x:Class="BolnicaSims.View.AddView.DodavanjeTerminaAdvanced"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BolnicaSims.View.AddView"
        mc:Ignorable="d"
        Title="DodavanjeTerminaAdvanced" Height="450" Width="800" ResizeMode="NoResize">
    <Grid Background="Azure">
        <Label Content="IZDAJ UPUT" Height=" 30" HorizontalAlignment="Center" Margin="0,10,0,394" FontSize="14" FontWeight="DemiBold"/>
        <StackPanel Margin="0,45,0,-10">
            <WrapPanel Height="15" />
            <WrapPanel Height="170">
                <TextBlock x:Name="txtBlock2" TextAlignment="Center"  Text="Specijalisti: " TextWrapping="Wrap" VerticalAlignment="Center" FontSize="12" Height="150" Width="143" />
                <ListView x:Name="listDoktor" SelectionMode="Single" Width="218" Height="170">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <WrapPanel>
                                <TextBlock Text="{Binding Specijalizacija}" FontWeight="Bold"/>
                            </WrapPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <TextBlock x:Name="txtBlock2_Copy" TextAlignment="Center"  Text="Prostorija: " TextWrapping="Wrap" VerticalAlignment="Center" FontSize="12" Height="150" Width="143" />
                <ListView x:Name="listProstorija" SelectionMode="Single" Width="218" Height="170">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <WrapPanel>
                                <TextBlock Text="Naziv: "/>
                                <TextBlock Text="{Binding Naziv}" FontWeight="Bold"/>
                            </WrapPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </WrapPanel>
            <WrapPanel Height="15"/>
            <WrapPanel Height="30">
                <TextBlock x:Name="txtBlock1" HorizontalAlignment="Center" TextAlignment="Center" Text="Datum i vreme: " TextWrapping="Wrap" VerticalAlignment="Top" FontSize="12" Height="32" Width="142" />
                <DatePicker x:Name="datePocetak" Height="30" Width="142" />
                <TextBox x:Name="txtSati" Text="h" Height="30" Width="40" />
                <TextBox x:Name="txtMinuti" Text ="Min" Height="30" Width="40" />
                <TextBlock x:Name="txtBlock3" TextAlignment="Center" Text="Trajanje (min):" Height="30" Width="143" TextWrapping="Wrap" VerticalAlignment="Center" FontSize="12"/>
                <TextBox x:Name ="txtBox1" Height="30" Width="120" />

            </WrapPanel>
            <WrapPanel Height="15"/>
            <WrapPanel Height="30">
                <TextBlock x:Name="txtBlock4" TextAlignment="Center" Text="Tip termina:" Height="30" Width="143" TextWrapping="Wrap" VerticalAlignment="Center" FontSize="12"/>
                <ComboBox x:Name="comboTip" Height="30" Width="141" SelectionChanged="comboTip_SelectionChanged" />
                <TextBlock Width="220"/>
                <CheckBox x:Name="checkBox" Content="HITNO!&#xA;" Checked="checkBox_Checked" Width="67" FontWeight="Bold" Height="20"/>

            </WrapPanel>
            <WrapPanel Height="52"/>
            <WrapPanel Height="32" Width="464">
                <TextBlock Width="86"/>
                <Button x:Name="izdajBtn" Content="Izdaj" HorizontalAlignment="Center"  VerticalAlignment="Center"  Height="25" Width="115" Background="White" Click="ButtonIzmeni_Click"/>
                <TextBlock Width="121"/>
                <Button x:Name="odustaniBtn" Content="Odustani" Click="odustaniBtn_Click" HorizontalAlignment="Center"  VerticalAlignment="Center"  Height="25" Width="120" Background="White" />
            </WrapPanel>
        </StackPanel>

    </Grid>
</Window>
