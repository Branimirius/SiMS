<Window x:Class="BolnicaSims.View.NotificationsView.OdbijanjeLekaKomentar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BolnicaSims.View.NotificationsView"
        mc:Ignorable="d"
        Title="OdbijanjeLekaKomentar" Height="300" Width="300">
    <Grid>
        <StackPanel>
            <WrapPanel Height="10"/>
            <WrapPanel Height="22">
                <TextBlock Text="Unesite komentar (razlog) za odbijanje leka:" FontSize="13"/>
            </WrapPanel>
            <WrapPanel Height="10"/>
            <WrapPanel Height="160">
                <TextBox x:Name="txtKomentar" Width="300" Height="160" />
            </WrapPanel>
            <WrapPanel Height="35" Width="209">
                <Button x:Name="okBtn" Content="OK" Click="okBtn_Click" Width="40" Height="35"/>
                <TextBlock Text=" " Width="100"/>
                <Button x:Name="nazadBtn" Content="Nazad" Click="nazadBtn_Click" Width="40"/>
            </WrapPanel>
        </StackPanel>
    </Grid>
</Window>
